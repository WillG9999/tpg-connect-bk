# Connect Dating Application - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ============================================
# APPLICATION CONFIGURATION
# ============================================
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-512-bits-long
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# ============================================
# FIREBASE CONFIGURATION
# ============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_CONFIG_PATH=/path/to/your/firebase-service-account.json

# ============================================
# GOOGLE CLOUD CONFIGURATION
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=your-storage-bucket
GCP_CREDENTIALS_PATH=/path/to/your/service-account.json

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_PROVIDER=smtp
EMAIL_FROM_EMAIL=your-email@domain.com
EMAIL_FROM_NAME=Connect Dating App
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@domain.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_AUTHENTICATION_ENABLED=true
EMAIL_START_TLS_ENABLED=true
EMAIL_SSL_ENABLED=false

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_BASE_URL=https://your-production-app.com

# ============================================
# DEVELOPMENT/DEBUG SETTINGS
# ============================================
EXPOSE_RESET_TOKENS=false
AUTO_VERIFY_USERS=false
EMAIL_DEBUG_ENABLED=false

# ============================================
# GOOGLE SECRET MANAGER (Optional - for production)
# ============================================
# GOOGLE_CLOUD_PROJECT=your-project-id
# ENABLE_SECRET_MANAGER=true
# SECRET_MANAGER_PREFIX=connect-app